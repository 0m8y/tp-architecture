@page "/reservations"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@using Blazored.LocalStorage;
@inject ILocalStorageService LocalStorage
@inject AuthorizedHttpClient AuthClient

@using System.Net.Http.Json
@using GestionHotel.Frontend.Dto
@using Microsoft.AspNetCore.Components.Authorization

<h2 class="text-center my-4">Mes réservations</h2>

@if (isLoading)
{
    <div class="text-center">Chargement...</div>
}
else if (reservations == null || !reservations.Any())
{
    <div class="alert alert-info text-center">
        Vous n'avez pas encore de réservations.
    </div>
}
else
{
    <div class="container">
        @foreach (var reservation in reservations)
        {
            <div class="card mb-4 shadow-sm">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@GetImagePath(reservation)" class="img-fluid rounded-start" style="object-fit: cover; height: 100%;" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                Réservation du @reservation.StartDate.ToString("dd/MM/yyyy") au @reservation.EndDate.ToString("dd/MM/yyyy")
                            </h5>
                            <p class="card-text">
                                @($"{reservation.RoomIds.Count} chambre(s) – Statut : {reservation.Status}")
                            </p>
                            @if (!reservation.IsPaid)
                            {
                                <button class="btn btn-warning" @onclick="() => ShowConfirmationPopup(reservation.Id)">Payer maintenant</button>
                            }
                            else
                            {
                                <span class="badge bg-success">Payée</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


<!-- Popup 1 : Confirmation conditions -->
@if (showConfirmationPopup)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                </div>
                <div class="modal-body">
                    <p>Veuillez confirmer que vous acceptez les conditions générales de réservation.</p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="termsCheckbox" @bind="termsAccepted" />
                        <label class="form-check-label" for="termsCheckbox">
                            J'accepte les conditions d'utilisation.
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => showConfirmationPopup = false">Annuler</button>
                    <button class="btn btn-primary" @onclick="ConfirmReservation" disabled="@(termsAccepted == false)">Confirmer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<!-- Popup 2 : Réservation confirmée -->
@if (showSuccessPopup)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Réservation confirmée</h5>
                </div>
                <div class="modal-body">
                    <p>Votre réservation est confirmée et en attente de paiement.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" @onclick="GoToPayment">Payer maintenant</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<ReservationDto>? reservations;
    private bool isLoading = true;

    private bool showConfirmationPopup = false;
    private bool termsAccepted = false;
    private bool showSuccessPopup = false;
    private Guid? selectedReservationId = null;

    protected override async Task OnInitializedAsync()
    {
        await AuthClient.InitAsync(LocalStorage);

        var response = await AuthClient.Client.GetAsync("https://localhost:7208/api/v1/bookings/my-reservations");

        if (response.IsSuccessStatusCode)
        {
            reservations = await response.Content.ReadFromJsonAsync<List<ReservationDto>>();
        }

        isLoading = false;
        }

    private string GetImagePath(ReservationDto reservation)
    {
        return reservation.RoomIds != null && reservation.RoomIds.Any()
            ? $"/rooms/{reservation.RoomIds.First()}.jpg"
            : "/img/default-room.jpg";
    }

    private void ShowConfirmationPopup(Guid reservationId)
    {
        selectedReservationId = reservationId;
        termsAccepted = false;
        showConfirmationPopup = true;
    }

    private void ConfirmReservation()
    {
        showConfirmationPopup = false;
        showSuccessPopup = true;
    }

    private void GoToPayment()
    {
        showSuccessPopup = false;
        Navigation.NavigateTo($"/payment/{selectedReservationId}");
    }
}
